---
import { getAndGroupUniqueTags } from "../../lib/utils";
import { PROFILE } from "../../content/profileData";


const tagsMap = await getAndGroupUniqueTags();

const db_skills = PROFILE.db_skills;
const aws_skills = PROFILE.aws_skills;
const azure_skills = PROFILE.azure_skills;
const industries = PROFILE.industries;
const sys_skills = PROFILE.sys_skills;
const dev_skills = PROFILE.dev_skills;
const pjm_skills = PROFILE.pjm_skills;
